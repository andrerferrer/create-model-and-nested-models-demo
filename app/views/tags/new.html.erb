<div class="container">

  <h2>These Tags were already created</h2>
  <p>
    <% @tags.each do |tag| %>
      <div class="badge badge-dark">
        <%= tag.name %>
        <%= link_to '❌', tag_path(tag), method: :delete, data: { confirm: "Are you sure?" }, remote: true %>
      </div>
    <% end %>
  </p>

  <h2>Create new Tags</h2>

  <%= simple_form_for @tag do |f| %>
    <%= f.input :name, label: false, placeholder: "Tag number one, Tag2, Tag3 etc" %>
    <%= f.submit 'Create Tags' %>
  <% end %>

</div>